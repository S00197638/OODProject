<Window x:Class="MCU_Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCU_Hub"
        mc:Ignorable="d"
        Title="MCU HUB" Height="700" Width="1400" WindowStartupLocation="CenterScreen" Icon="MarvelIcon.png" ResizeMode="NoResize" Loaded="Window_Loaded">

    <TabControl TabStripPlacement="Top">

        <TabItem Name="Home" Header="Home" Width="100">

            <Grid>
                <Label Content="MCU HUB" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
                <Button x:Name="btnCreateList" Content="New List" HorizontalAlignment="Left" Margin="652,28,0,0" VerticalAlignment="Top" Width="100" FontFamily="Arial" FontSize="14" Height="30"/>
            </Grid>
            
        </TabItem>

        <TabItem Name="Projects" Header="Projects" Width="100">

            <Grid>
                <Label Content="MCU HUB" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
                <Label x:Name="lblMainLstTitle" Content="MCU Projects" HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="18"/>
                <ComboBox x:Name="cbBoxFilter" HorizontalAlignment="Left" Margin="175,70,0,0" VerticalAlignment="Top" Width="175" FontFamily="Arial" FontSize="14" Height="30"/>
                <ListBox x:Name="lbxProjects" HorizontalAlignment="Left" Height="410" Margin="50,110,0,0" VerticalAlignment="Top" Width="300"/>
                <Label x:Name="lblDescpTitle" Content="Project Description" HorizontalAlignment="Right" Margin="0,70,439,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="18"/>
                <ListBox x:Name="lbxDescription" HorizontalAlignment="Right" Height="410" Margin="0,110,50,0" VerticalAlignment="Top" Width="550"/>
            </Grid>
            
        </TabItem>

    </TabControl>
</Window>
